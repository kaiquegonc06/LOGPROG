programa{//ação que inicia o programa
	
	funcao inicio(){//inicia a execução do programa
		inteiro idade//variavel idade do tipo inteiro

		escreva("digite a idade: ")//texto para pedir que o usuario escreva a idade
		leia(idade)//inserir a idade

		se(idade >= 18){
			escreva("É de maior.\n")//texto para maior de idade
		}senao{//aqui começa a condição SENAO / ou termina a condição SE
			escreva("Menos de idade.\n")//texto para menor de idade
		}
			}
}
