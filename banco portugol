				escreva("\n Digite i valor desejado: R$")
				leia(saque)
			} se(saque > saldo){
				escreva("\n saldo Insulficiente, tente novamente mais tarde")
			} senao se(saque <=0){
				escreva("\n valor inválido - Digite um valor mair que zero\n")
			} senao{
				saldo = saldo - saque
				escreva("\n Saque relaizado com sucesso")
				escreva("\n seu Saldo atual agora é de: R$", saldo, "\n")	
			} se( opcao ==3){
				
			}
					
				}
			
